<h1>Tasks</h1>

<ul>
  {{#each}}
  <li>{{#link-to 'task' task}}{{name}}{{/link-to}}</li>
  {{/each}}
</ul>

<h2>Add a new Task</h2>

<form action="/tasks" method="post">
  <label for="task_name">Task Description</label>
  <input id="task_name" name="task" type="text" value="<%= @task.name %>">
  <button>Add Task</button>
</form>
